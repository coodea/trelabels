{
  "manifest_version": 3,
  "name": "Trelabels for Trello",
  "short_name": "Trelabels",
  "version": "1.0.22",
  "description": "Change the labels style on Trello boards.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://trello.com/*"
      ],
      "js": [
        "jquery-3.6.0.slim.min.js",
        "trelabels.js"
      ],
      "css": [
        "trelabels.css"
      ],
      "run_at": "document_end"
    }
  ]
}
